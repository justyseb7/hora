<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/bus1"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Name here"
        android:id="@+id/name_here"
        android:padding="6dp"
        android:textSize="25sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Source here"
        android:id="@+id/source_here"
        android:padding="2dp"
        android:textSize="25sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Time here"
        android:id="@+id/time_here"
        android:padding="6dp"
        android:textSize="25sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Destination here"
        android:id="@+id/destination_here"
        android:padding="6dp"
        android:textSize="25sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Type here"
        android:id="@+id/type_here"
        android:padding="6dp"
        android:textSize="25sp"
        />

</LinearLayout>